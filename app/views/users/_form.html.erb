<%= form_with(model: @user, local: true, :html => {class: 'form-horizontal', role: 'form'}) do |form| %>


  <div class="form-group">
    
    <div class = 'col-sm-2 control-label'>
      <%= form.label :username %>
    </div> 
    
    <div class = 'col-sm-10'>
      <%= form.text_field :username, class: 'form-control', placeholder: 'username', autofocus: true %>
    </div>
    
  </div>

  <div class="form-group">
    
    <div class = 'col-sm-2 control-label'>
      <%= form.label :email %>
    </div>
    
    <div class = 'col-sm-10'>
      <%= form.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
    </div>
    
  </div>
  
  <div class="form-group">
    
    <div class = 'col-sm-2 control-label'>
      <%= form.label :password %>
    </div>
    
    <div class = 'col-sm-10'>
      <%= form.password_field :password, class: 'form-control', placeholder: 'Enter your password' %>
    </div>
    
  </div>

  <div class="form-group">
    <div class= "col-sm-offset-2 col-sm-10">
    <%= form.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary') %>
  </div>
</div>
<% end %>
