

<%= form_with(model: article, local: true, :html => {class: 'form-horizontal', role: 'form'}) do |form| %>


  
  <% if article.errors.any? %>
  
  <div class= 'row'>
    <div class = 'col-xs-8 col-xs-offset2'>
      <div class = 'panel panel-danger'>
      <div class = 'panel-heading'>
        <h2 class = 'panel-title'>
          errors occured
        </h2>
        
      <div class = 'panel-body'>
        <ul>
          <% article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      
      </div>
      

      </div>
    </div>
  </div>
<% end %>
  
  

  <div class="form-group">
    
    <div class = 'col-sm-2 control-label'>
      <%= form.label :title %>
    </div> 
    
    <div class = 'col-sm-5'>
      <%= form.text_field :title, class: 'form-control', placeholder: 'Title', autofocus: true %>
    </div>
    
  </div>

  <div class="form-group">
    
    <div class = 'col-sm-2 control-label'>
      <%= form.label :description %>
    </div>
    
    <div class = 'col-sm-10'>
      <%= form.text_area :description, class: 'form-control', rows: 10, placeholder: 'Body of the article' %>
    </div>
    
  </div>

  <div class="form-group">
    <div class= "col-sm-offset-2 col-sm-10">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
